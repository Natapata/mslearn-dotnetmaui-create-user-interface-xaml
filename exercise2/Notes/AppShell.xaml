<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Notes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Notes"
    xmlns:view="clr-namespace:Notes.Views">

    <ShellContent
        Title="MovieCatalog"
        ContentTemplate="{DataTemplate view:MoviesListPage}"
        Route="MovieListPage" />
    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Alignment"
        ContentTemplate="{DataTemplate local:AlignmentPage}"
        Route="AlignmentPage" />
    <ShellContent
        Title="LayoutExample"
        ContentTemplate="{DataTemplate local:LayoutExamplePage}"
        Route="LayoutExamplePage" />
    <ShellContent
        Title="TipCalculator"
        ContentTemplate="{DataTemplate local:TipCalculatorPage}"
        Route="TipCalculatorPage" />
    <ShellContent
        Title="Notes"
        ContentTemplate="{DataTemplate local:NotesPage}"
        Route="NotesPage" />
    <ShellContent
        Title="MirroredTimeCalculatorPage"
        ContentTemplate="{DataTemplate local:MirroredTimeCalculatorPage}"
        Route="MirroredTimeCalculatorPage" />
    <ShellContent
        Title="ControlsBindingPage"
        ContentTemplate="{DataTemplate local:ControlsBindingPage}"
        Route="ControlsBindingPage" />
    <ShellContent
        Title="What's the weather like?"
        ContentTemplate="{DataTemplate local:WeatherClient}"
        Route="WeatherClient" />

</Shell>
